upstream backend {
        server {{ ip_server1 }};
        server {{ ip_server2 }};
    }

    server {
        listen      80;
        server_name {{ ip_server_lb }};

        location / {
	        proxy_redirect      off;
	        proxy_set_header    X-Real-IP $remote_addr;
	        proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;
	        proxy_set_header    Host $http_host;
		proxy_pass http://backend;
	}
}